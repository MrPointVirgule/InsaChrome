{
	"manifest_version": 2,
	"name": "InsaChrome",
	"version": "3.3.0.0",
	"description": "Connectez-vous automatiquement au réseau wifi INSA-invité, à cipcnet et au réseau INSA, en un clic.",
	"icons": 
		{
			"128": "content/icon128.png",
			"16": "content/icon16.png",
			"48": "content/icon48.png"
		},
	"background": 
		{
			"scripts": [ "jquery-2.1.1.min.js", "aes.js", "background.js" ],
			"persistent": false
		},
	"browser_action": 
		{
			"default_icon": "content/icon48.png",
			"default_popup": "popup.html"
		},
	"content_scripts": 
		[ 	{
				"all_frames": true,
				"js": [ "insainvite.js" ],
				"matches": ["*://securelogin.arubanetworks.com/upload/custom/guests/centre.htm", 
							"*://*.insa-lyon.fr/upload/custom/guests/centre.htm", 
							"*://*.insa-lyon.fr/upload/custom/CP_FILAIRE/centre.htm" ]
			}, 
			{
				"js": [ "autoconnect.js" ],
				"matches": [ "*://*.insa-lyon.fr/*" ]
			}],
	"omnibox": 
		{
			"keyword": "i"
		},
	"options_page": "options.html",
	"permissions": [ "http://securelogin.arubanetworks.com/*", 
					"*://*.insa-lyon.fr/*", 
					"cookies", 
					"storage", 
					"tabs" ]
}
